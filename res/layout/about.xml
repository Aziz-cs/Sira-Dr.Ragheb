<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sira_bg_abt" >

 

    <Button
        android:id="@+id/btn_facebook_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_like"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_ilight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_above="@id/btn_facebook_like"
        android:text="iLighTech"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_ilight"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_about_small"
                android:text="نشر البرنامج"
                				android:textSize="18sp"
                android:textColor="@drawable/text_color"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_about_small"
                android:text="تقييم البرنامج"
                				android:textSize="18sp"
                android:textColor="@drawable/text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_contactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_about_small"
                android:text="تواصل معنا"
                				android:textSize="18sp"
                android:textColor="@drawable/text_color"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_otherApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_about_small"
                android:text="برامجنا الأخرى"
                				android:textSize="18sp"
                android:textColor="@drawable/text_color"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rayaa" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cart_separatoor" />

    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:layout_above="@id/linearLayout1">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
       android:textSize="18sp"

        android:text="@string/tv_about"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</ScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:text="الإصدار" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toLeftOf="@+id/textView1"
                android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="1.7" />

</RelativeLayout>